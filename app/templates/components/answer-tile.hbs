<div class='ui segment answerSegment'>
  <div class='ui grid'>

    {{#if deleteRequested}}
      <div class='sixteen wide column'>
        <div class="ui red message leftAlign">
          <div class="header">
            Confirm Delete
          </div>
          <ul class="list">
            <button {{action 'deleteAnswer' answer}} class='ui button red'>Delete</button>
            <button {{action 'cancelDelete'}} class='ui button blue'>Cancel</button>
          </ul>
        </div>
      </div>
    {{else}}
      <div class='one wide column'>
        <div {{action 'requestDelete'}}>
          <i class='trash outline icon red big deleteIcon'></i>
        </div>
      </div>
    {{/if}}

    <div class='eleven wide column'>
        <p class='answerTimestamp'>
          {{timestamp answer.timestamp}}
          <div class='favorites'>
            {{#if isFavorite}}
            <i {{action 'favoriteAnswer' answer}} class='star icon big yellow'></i>
            {{else}}
            <i {{action 'favoriteAnswer' answer}} class='star empty icon big yellow'></i>
            {{/if}}
          </div>
        </p>
        <p class='answerAnswer'>{{answer.answer}}</p>
        <p class='answerAuthor'>{{answer.author}}</p>
    </div>
    <div class='four wide column answerSidebar'>
      <i class='comment icon massive green'></i>
      <br><br>
      <div class='voteDisplay ui grid'>
        <div class='eight wide column upvotes'>
          <i {{action 'upvote' answer}} class='thumbs up icon big green'></i>
          <br><br>
          <span class='upvoteCount'>+{{answer.upvotes}}</span>
        </div>
        <div class='eight wide column downvotes'>
          <i {{action 'downvote' answer}} class='thumbs down icon big red'></i>
          <br><br>
          <span class='downvoteCount'>-{{answer.downvotes}}</span>
        </div>
      </div>
      <br>
    </div>
  </div>
</div>
<br>
